{
    "name": "helix/framework",
    "license": "MIT",
    "type": "library",
    "description": "Helix Framework",
    "homepage": "https://github.com/helix-php",
    "support": {
        "issues": "https://github.com/helix-php/framework/issues",
        "source": "https://github.com/helix-php/framework"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru",
            "role": "maintainer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "symplify/monorepo-builder": "^10.0",
        "symfony/var-dumper": "^5.4|^6.0",
        "phpunit/phpunit": "^9.5.20",
        "vimeo/psalm": "^4.22",
        "jetbrains/phpstorm-attributes": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.8",
        "nyholm/psr7": "^1.5",
        "symfony/http-foundation": "^5.4|^6.0",
        "laminas/laminas-diactoros": "^2.12",
        "httpsoft/http-message": "^1.0"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests",

            "Helix\\Boot\\Tests\\": "libs/boot/tests",
            "Helix\\Clock\\Tests\\": "libs/clock/tests",
            "Helix\\Config\\Tests\\": "libs/config/tests",
            "Helix\\Container\\Tests\\": "libs/container/tests",
            "Helix\\Debug\\Tests\\": "libs/debug/tests",
            "Helix\\Env\\Tests\\": "libs/env/tests",
            "Helix\\EventDispatcher\\Tests\\": "libs/event-dispatcher/tests",
            "Helix\\Foundation\\Tests\\": "libs/foundation/tests",
            "Helix\\Foundation\\Console\\Tests\\": "libs/foundation-console/tests",
            "Helix\\Foundation\\Http\\Tests\\": "libs/foundation-http/tests",
            "Helix\\Http\\Tests\\": "libs/http/tests",
            "Helix\\Http\\Header\\Tests\\": "libs/http-header/tests",
            "Helix\\Http\\Method\\Tests\\": "libs/http-method/tests",
            "Helix\\Http\\StatusCode\\Tests\\": "libs/http-status-code/tests",
            "Helix\\Middleware\\Tests\\": "libs/middleware/tests",
            "Helix\\ParamResolver\\Tests\\": "libs/param-resolver/tests",
            "Helix\\Pool\\Tests\\": "libs/pool/tests",
            "Helix\\Router\\Tests\\": "libs/router/tests",
            "Helix\\Router\\Generator\\Tests\\": "libs/router-generator/tests",
            "Helix\\Server\\Tests\\": "libs/server/tests",
            "Helix\\Server\\Sapi\\Tests\\": "libs/server-sapi/tests",
            "Helix\\Session\\Tests\\": "libs/session/tests",
            "Helix\\Session\\Http\\Tests\\": "libs/session-http/tests",
            "Helix\\View\\Tests\\": "libs/view/tests",
            "Helix\\View\\Engine\\Php\\Tests\\": "libs/view-engine-php/tests",
            "Helix\\View\\Engine\\Twig\\Tests\\": "libs/view-engine-twig/tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev",
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "dev:merge": "monorepo-builder merge",
        "dev:package-alias": "monorepo-builder package-alias",
        "dev:propagate": "monorepo-builder propagate",
        "dev:validate": "monorepo-builder validate",
        "post-create-project-cmd": "@prepare",
        "prepare": [
            "@php do orm:schema-tool:update"
        ],
        "phpcs": "php-cs-fixer fix --config=.php-cs-fixer.php"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
